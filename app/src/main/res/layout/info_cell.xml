<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/outpatient_check_hospital"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_marginLeft="12.599976dip"
        android:layout_marginRight="12.599976dip"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/linear_layout_up"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/info_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="名称"
                android:textColor="@color/white"
                android:textSize="16.0sp"
                 />

            <TextView
                android:id="@+id/info_list_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="名称"
                android:textColor="@color/white"
                android:textSize="16.0sp"
                android:typeface="monospace" />

            <ImageView
                android:id="@+id/info_arrow"
                android:focusableInTouchMode="false"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:focusable="false"
                android:background="@drawable/m"
                android:text=">"
                android:clickable="false" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>