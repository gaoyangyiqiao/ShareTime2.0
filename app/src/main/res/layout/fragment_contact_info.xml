<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:background="@color/smssdk_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:orientation="horizontal"
         >
        <ImageView
            android:id="@+id/iv_icon_in_contactinfo"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_margin="8dip"
            android:scaleType="fitCenter"
            android:background="@drawable/logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="2dip"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name_in_contactinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:textSize="14sp"
                android:textColor="#ff000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:layout_marginRight="8dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="account:"
                    android:textSize="14sp"
                    android:textColor="#ff000000"/>
                <TextView
                    android:id="@+id/tv_account_in_contactinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:textSize="14sp"
                    android:textColor="#ff000000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_invite_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:textSize="16sp"
        android:textColor="#5c5c5c"
        android:gravity="center_horizontal"/>




        <turingmachine.com.sharetime20.androidbootstrap.BootstrapButton
            android:id="@+id/btn_schedule_in_contactinfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="查看日程"
            />



    <turingmachine.com.sharetime20.androidbootstrap.BootstrapButton
        android:id="@+id/btn_match_in_contactinfo"
        android:layout_width="match_parent"
        bootstrapbutton:bb_roundedCorners="true"
        bootstrapbutton:bb_type="primary"
        android:layout_height="48dip"
        android:layout_marginTop="13dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:text="新建匹配"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:background="@drawable/smssdk_btn_enable"/>


</LinearLayout>