<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="104dp"
            android:layout_height="52dp"
            android:text="邀请人"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <EditText
            android:id="@+id/et_invitation_detail_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内容为空"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活动内容"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="112dp"
                        android:layout_height="58dp"
                        android:gravity="left"
                        android:text="活动编号"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />
                    <EditText
                        android:id="@+id/et_invitation_detail_id"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="内容为空"
                        android:gravity="fill_horizontal"
                        android:editable="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="112dp"
                        android:layout_height="58dp"
                        android:gravity="left"
                        android:text="活动主题"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />
                    <EditText
                        android:id="@+id/et_invitation_detail_theme"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="内容为空"
                        android:gravity="fill_horizontal"
                        android:editable="false"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.06">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="活动发起者"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />
                    <EditText
                        android:id="@+id/et_invitation_detail_founder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="内容为空"
                        android:editable="false"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:text="活动时间"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:gravity="center"
                        />
                    <EditText
                        android:id="@+id/et_invitation_detail_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="内容为空"
                        android:editable="false"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="活动详细内容"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_weight="0.04"
                    />
                <EditText
                    android:id="@+id/et_invitation_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="内容为空"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:editable="false"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="活动成员"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_weight="0.07" />
                <ListView
                    android:id="@+id/lv_invitation_detail_friend_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ListView>
            </LinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="fill_horizontal"
                android:rowCount="1"
                android:columnCount="2">
                <Button
                    android:id="@+id/btn_invitation_accept"
                    android:text="接受邀请"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="208dp" />
                <Button
                    android:id="@+id/btn_invitation_reject"
                    android:text="拒绝邀请"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="208dp" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>