<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/outpatient_check_hospital"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_marginLeft="12.599976dip"
        android:layout_marginRight="12.599976dip"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/phonecontacts_view_cell_iv"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:background="@drawable/contact_img"
                android:adjustViewBounds="false" />

            <TextView
                android:id="@+id/phonecontacts_view_cell_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="名称"
                android:textColor="#ff323232"
                android:textSize="16.0sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/phonecontacts_view_cell_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
